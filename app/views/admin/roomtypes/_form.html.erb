
<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <tiles:putAttribute name="content">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= yield(:title) %></h1>
      </div>
    </div>

    <%= form_for [:admin,@roomtype],html: {class: "form-horizontal",multipart: true} do |r| %>
       <%= render 'shared/error',object: @roomtype %>
        <div class="form-group">
        <label class="col-lg-2 control-label">Tên</label>
        <div class="col-lg-8">
           <%= r.text_field :name,class: "form-control input-medium" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label">Giá 1 giờ</label>
        <div class="col-lg-8">
           <%= r.text_field :price,class: "form-control input-medium" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label">Mô tả</label>
         <div class="col-md-8">
          <%= r.text_area :description,class: "form-control input-medium",rows: 10 %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label"></label>
        <div class="col-md-8">
          <%= r.submit yield(:button_text),class: "btn btn-primary" %>
          <span></span>
          <a href="" class="btn btn-default">Hủy</a>
        </div>
      </div>
    </form>
    <% end %>


  </tiles:putAttribute>

  <tiles:putAttribute name="javascript-source">
</tiles:putAttribute>

</tiles:insertTemplate>

</div>
</div>

</div>
