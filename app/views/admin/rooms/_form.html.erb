
<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <tiles:putAttribute name="content">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= yield(:title) %></h1>
      </div>
    </div>

    <%= form_for [:admin,@room],html: {class: "form-horizontal",multipart: true} do |r| %>
       <%= render 'shared/error',object: @room %>
       <div class="form-group">
        <label class="col-lg-2 control-label">Tên phòng</label>
        <div class="col-lg-8">
           <%= r.text_field :name,class: "form-control input-medium" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label">Số giường</label>
        <div class="col-lg-8">
           <%= r.text_field :bed_quantity,class: "form-control input-medium" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label"> Loại Phòng</label>
        <div class="col-md-8">
          <%=r.select :roomtype_id,Roomtype.all.collect{|r| [r.name,r.id]},{prompt: '--Chọn kiểu phòng--'},{class:"form-control input-medium"} %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label">Picture</label>
         <div class="col-md-8">
          <%=r.file_field :avatar%>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label"></label>
        <div class="col-md-8">
          <%= r.submit yield(:button_text),class: "btn btn-primary" %>
          <span></span>
          <a href="" class="btn btn-default">Hủy</a>
        </div>
      </div>
    </form>
    <% end %>


  </tiles:putAttribute>

  <tiles:putAttribute name="javascript-source">
</tiles:putAttribute>

</tiles:insertTemplate>

</div>
</div>

</div>
