
<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <tiles:insertAttribute name="content"></tiles:insertAttribute>
    <tiles:putAttribute name="content">
    <link href="/hanashop/templates/resource/datatable-bootstrap/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="/hanashop/templates/resource/resources/datatable-responsive/css/dataTables.responsive.css" rel="stylesheet" />
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Danh sách phòng</h1>
      </div>
    </div>
    <p>
      <%= link_to new_admin_room_path,class: "btn btn-success" do %>
        Thêm<i class="fa fa-plus"></i>
      <% end %>
    </p>
    <table class="table table-striped table-bordered table-hover" id="dataTables-dsSanPham">
      <thead>
        <tr>
          <th align="center">Name</th>
          <th align="center">Type</th>
          <th align="center">Số giường</th>
          <th align="center">Ảnh</th>
          <th align="center">Tình Trạng</th>
          <th align="center">Chức năng</th>
        </tr>
      </thead>
      <tbody id="tbl-body">
        <% @rooms.each do |r| %>
        <tr>
          <td align="center"><%= r.name %></td>
          <td align="center"><%= r.roomtype_id %></td>
          <td align="center"><%= r.bed_quantity %></td>
          <td align="center">
            <%= image_tag(r.avatar, size: "100x90") if r.avatar? %>
          </td>
          <td text-align:center>
            <img src="images/active.png" width="20" height="20" />
          </td>
          <td align="center">
             <input type="hidden" id="hidden-maSanPham" value="" />
             <%= link_to edit_admin_room_path(r),class: "btn btn-default" do %>
              <i class="fa fa-edit"></i>
             <% end %>
             <%= link_to admin_room_path(r), id: "btn-xoa",class: "btn btn-default",method: :delete,data: {confirm: "Are you sure?"} do %>
                <i class="fa fa-remove"></i>
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div align="center">
     <%= will_paginate %>
    </div>
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
            <div class="modal-content">
              <form id="form-xoa"
              action=""
              method="post">
              <input id="modal-hidden-maSanPham" type="hidden" value=""
              name="maSanPham" />
              <div class="modal-header">
                <a href="#" data-dismiss="modal" aria-hidden="true" class="close">xóa</a>
                <h3>Xóa</h3>
              </div>
              <div class="modal-body">
                <p>Bạn có chắc chắn xóa thông tin này không?</p>
              </div>
              <div class="modal-footer">
                <button type="submit" id="btnYes" class="btn btn-danger">Có</button>
                <button type="button" data-dismiss="modal" aria-hidden="true"
                class="btn btn-secondary">Không</button>
              </div>
            </form>
          </div>
        </div>
      </div>


    </tiles:putAttribute>
    <tiles:putAttribute name="javascript-source">
    </tiles:putAttribute>
</tiles:insertTemplate>
</div>
</div>
</div>


