
    <div class="container">
          <div class="form-search" style="margin-top:20px;">
             <div class="col-md-8">
               <h1 align="center">Search Room</h1>
               <div class="panel panel-default">
                 <br>     

                 <div class="form-horizontal" >
                 <%= form_tag checkins_path do %>
                   <div class="form-group">
                     <label class="col-lg-2 control-label">From date</label>
                      <div class="col-md-8">
                        <div class='input-group '>
                        <%= text_field_tag :fromdate,nil,:id => 'datepicker',class: "form-control" %>
                        <span class="input-group-addon">
                          <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        </div>
                      </div>
                   </div>
                    <div class="form-group">
                      <label class="col-lg-2 control-label">To date</label>
                      <div class="col-md-8">
                        <input class="form-control" type="text" name="ten" class="input-medium" />
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-lg-2 control-label">Chọn tên khách sạn</label>
                      <div class="col-md-8">
                        <input class="form-control" type="text" name="ten" class="input-medium" />
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-lg-2 control-label">Chọn loại phòng</label>
                      <div class="col-md-8">
                        <input class="form-control" type="text" name="ten" class="input-medium" />
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-lg-2 control-label"></label>
                      <div class="col-md-8">
                        <button type="button" class="btn btn-info">
                          <span class="glyphicon glyphicon-search"></span> Search
                       </button>
                        <span></span>
                      </div>
                    </div>                        
                <% end %>
               </div>

            </div>
          </div>
       </div>
      
          
          
          <div class="services">
            <div class="list-search">
               <div class="services-top heading">
                    <h3>Choose Your Room</h3>
               </div>

              <% @rooms.each do |r| %>

               <div class="col-md-4">
                        <div class="feature-movie slider">
                            <ul>
                                <li>
                                    <%= image_tag (r.avatar),size:"500x250",alt: "" %>
                                    <span>
                                    <h4>Zootopia</h4>
                                    <p>Lorem ipsum dolor...</p>
                                    </span>
                                </li>
                                <li>
                                    <%=image_tag (r.avatar),size:"500x250",alt: "" %>
                                    <span>
                                    <h4>Doctor Strange</h4>
                                    <p>Lorem ipsum dolor...</p>
                                </span>
                                </li>
                                <li>
                                    <%=image_tag (r.avatar),size:"500x250",alt: "" %>
                                    <span>
                                    <h4>Fantastic Beasts And Where To Find Them</h4>
                                    <p>Lorem ipsum dolor...</p>
                                </span>
                                </li>
                            </ul>
                        </div>
                        <br>
                        <%= link_to "Book Room",new_checkin_path(room_id: r.id),class: "btn btn-primary"%>
             </div>

             <% end %>
            
             
            
             
        </div>
  </div>
 </div>